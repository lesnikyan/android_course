<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context=".MainActivity">

    <GridLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <Button
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:text="@string/button_service_start"
            android:id="@+id/buttonService"
            android:layout_row="0"
            android:layout_column="0"
            android:onClick="onService" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:text="Show Broadcast Receiver"
            android:id="@+id/buttonShowBReceiver"
            android:layout_row="1"
            android:layout_column="0"
            android:onClick="onBroadcastReceiver"/>

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Content provider"
            android:id="@+id/buttonContentProvider"
            android:layout_row="2"
            android:layout_column="0"
            android:onClick="onContentProvider"/>

        <Button
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:text="Threads: Handler"
            android:id="@+id/buttonHandler"
            android:layout_row="3"
            android:layout_column="0"
            android:onClick="onHandler"/>

        <Button
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:text="Threads: Async Task"
            android:id="@+id/buttonAsync"
            android:layout_row="4"
            android:layout_column="0"
            android:onClick="onAsync"/>
    </GridLayout>
</RelativeLayout>
