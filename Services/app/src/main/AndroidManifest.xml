<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="local.lessons.services" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainService"
            android:label="@string/title_activity_main_service" >
        </activity>
        <activity
            android:name=".BroadcastReceiverActivity"
            android:label="@string/title_activity_broadcast_receiver" >
        </activity>
        <activity
            android:name=".ContentProviderActivity"
            android:label="@string/title_activity_content_provider" >
        </activity>
        <activity
            android:name=".HandlerActivity"
            android:label="@string/title_activity_handler" >
        </activity>

        <service
            android:name=".TargetService"
            android:enabled="true"
            android:exported="true" >
        </service>
    </application>

</manifest>
